{{>header}}


<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <h1 class="app-page-title">Users Encryption
            </h1>

            <hr class="mb-4">
            {{#if encryptionrecord}}
            <div class="alert alert-success flashmsg" role="alert">
                <b>Your Encrption Details are:</b><br />
                <b>Raw Text: </b>{{encryptionrecord.0.data}}<br />
                <b>Elgamal: </b>{{encryptionrecord.0.elgamal}}<br />
                <b>AES: </b>{{encryptionrecord.0.aes}}<br />
                <b>SHA512: </b>{{encryptionrecord.0.sha512}}<br />
                <b>Masked: </b>{{encryptionrecord.0.masked}}
            </div>
            {{/if}}
            {{#if decryptionrecord}}
            <div class="alert alert-danger flashmsg" role="alert">
                <b>Your Decrypted Value is:</b>
                <br />{{decryptionrecord}}
            </div>
            {{/if}}
            {{#if errors}}
            {{#each errors}}
            <div class="alert alert-danger flashmsg" role="alert">{{this.msg}}</div>
            {{/each}}
            {{/if}}
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="body">
                            <div class="table-responsive" style="width:100%; padding:20px">
                                <table id="dataTables" class="table table-striped table-bordered" cellspacing="0"
                                    cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th>Encryption Date</th>
                                            <th>Owner</th>
                                            <th>Masked Data</th>
                                            <th>Access Date</th>
                                            <th>Unmask</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Encryption Date</th>
                                            <th>Owner</th>
                                            <th>Masked Data</th>
                                            <th>Access Date</th>
                                            <th>Unmask</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each encryption}}
                                        <tr>
                                            <td>{{date_time this.TextEncrypt.createdAt}}</td>
                                            <td>{{this.TextEncrypt.Admin.fullName}}</td>
                                            <td>
                                                <p title="{{this.TextEncrypt.masked}}">{{str_length this.TextEncrypt.masked}}</p>
                                            </td>
                                            <td>{{date_time this.createdAt}}</td>
                                            <td>
                                                <p data-placement="top" data-toggle="tooltip" title="Unmask Data">
                                                    <a href="/account/file-decryption/{{this.TextEncrypt.textUniqueID}}"
                                                        class="btn btn-primary btn-xs">
                                                        <i class="fa-regular fa-eye" style="color: #fff;"></i>
                                                    </a>
                                                </p>
                                            </td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Table -->
        </div>

    </div>
</div>

{{>footer}}