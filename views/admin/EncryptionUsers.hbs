{{>header}}


<div class="app-wrapper">

    <div class="app-content pt-3 p-md-3 p-lg-4">
        <div class="container-xl">

            <h1 class="app-page-title">Encryption User Access
                <p class="float-right" data-placement="top" data-toggle="tooltip" title="Grant User Permission">
                    <button class="btn btn-secondary btn-xs text-white" data-title="Grant User Permission"
                        data-toggle="modal" data-target="#encryptText">
                        <i class="fa-regular fa-circle-plus"></i>
                        Grant User Permission
                    </button>
                </p>
            </h1>

            <hr class="mb-4">
            {{#if errors}}
            {{#each errors}}
            <div class="alert alert-danger flashmsg" role="alert">{{this.msg}}</div>
            {{/each}}
            {{/if}}
            <div class="row clearfix">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="card">
                        <div class="body">
                            <div class="table-responsive" style="width:100%; padding:20px">
                                <table id="dataTables" class="table table-striped table-bordered" cellspacing="0"
                                    cellpadding="0">
                                    <thead>
                                        <tr>
                                            <th>Encryption Date</th>
                                            <th>User Allowed</th>
                                            <th>Allowed Date</th>
                                            <th>Delete</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <th>Encryption Date</th>
                                            <th>User Allowed</th>
                                            <th>Allowed Date</th>
                                            <th>Delete</th>
                                        </tr>
                                    </tfoot>
                                    <tbody>
                                        {{#each encryptionUsers.FileAccess}}
                                        <tr>
                                            <td>{{date_time this.createdAt}}</td>
                                            <td>{{this.Admin.fullName}}</td>
                                            <td>{{date_time this.createdAt}}</td>
                                            <td>
                                                <p data-placement="top" data-toggle="tooltip" title="Delete"><button
                                                        class="btn btn-danger btn-xs" data-title="Delete"
                                                        data-toggle="modal"
                                                        data-target="#deleteModal{{../encryptionUsers.textUniqueID}}">
                                                        <i class="fa-regular fa-trash-can" style="color: #fff;"></i>
                                                    </button></p>
                                            </td>
                                        </tr>
                                        <div class="modal fade" id="deleteModal{{../encryptionUsers.textUniqueID}}" tabindex="-1"
                                            role="dialog" aria-labelledby="deleteModalTitle" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        <div class="alert alert-danger">
                                                            <span class="glyphicon glyphicon-warning-sign"></span>
                                                            Are you sure you want to delete this encryption file?
                                                        </div>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <a class="btn btn-success text-white"
                                                            href="/account/delete/user/{{this.Admin.id}}/file-encryption/{{../encryptionUsers.textUniqueID}}">
                                                            <i class="fa-regular fa-circle-check"></i>
                                                            Yes
                                                        </a>
                                                        <button type="button" class="btn btn-danger text-white"
                                                            data-dismiss="modal">
                                                            <i class="fa-regular fa-xmark"></i>
                                                            No
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        {{/each}}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Table -->
            <div class="modal fade" id="encryptText" tabindex="-1" role="dialog" aria-labelledby="addModalTitle"
                aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document">
                    <div class="modal-content">
                        <form class="settings-form" action="/account/add/user/file-encryption/{{encryptionUsers.textUniqueID}}"
                            method="post">
                            <div class="modal-header">
                                <h5 class="modal-title" id="exampleModalLongTitle">
                                    Grant User Permission
                                </h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="setting-input-2" class="form-label">
                                        Choose User
                                    </label>
                                    <select class="form-control" name="adminId">
                                        {{#each Users}}
                                        <option value="{{this.id}}">{{this.fullName}}</option>
                                        {{/each}}
                                    </select>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                <button type="submit" class="btn app-btn-primary">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

{{>footer}}