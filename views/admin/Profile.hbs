{{>header}}

<div class="app-wrapper">

	<div class="app-content pt-3 p-md-3 p-lg-4">
		<div class="container-xl">
			<h1 class="app-page-title">Settings</h1>
			<hr class="mb-4">
			{{#if errors}}
			{{#each errors}}
			<div class="alert alert-danger flashmsg" role="alert">{{this.msg}}</div>
			{{/each}}
			{{/if}}
			<div class="row g-4 settings-section">
				<div class="col-12 col-md-4">
					<h3 class="section-title">General</h3>
					<div class="section-intro">Enter your general profile settings correctly in this category. </div>
				</div>
				<div class="col-12 col-md-8">
					<div class="app-card app-card-settings shadow-sm p-4">

						<div class="app-card-body">
							<form class="settings-form">
								<div class="row">
									<div class="mb-3 col-12">
										<label for="setting-input-2" class="form-label">Fullname</label>
										<input type="text" class="form-control" id="setting-input-2"
											value="{{admin.fullName}}" disabled>
									</div>
									<div class="mb-3 col-12">
										<label for="setting-input-2" class="form-label">Email Addres</label>
										<input type="text" class="form-control" id="setting-input-2"
											value="{{admin.email}}" disabled>
									</div>
									<div class="mb-3 col-12">
										<label for="setting-input-2" class="form-label">Account Role</label>
										<input type="text" class="form-control" id="setting-input-2"
											value="{{admin.position}}" disabled>
									</div>
									<div class="mb-3 col-12">
										<label for="setting-input-2" class="form-label">Account Creation</label>
										<input type="text" class="form-control" id="setting-input-2"
											value="{{time_ago admin.createdAt}}" disabled>
									</div>
								</div>
							</form>
						</div>

					</div>
				</div>
			</div>
			<hr class="mb-4">
			<div class="row g-4 settings-section">
				<div class="col-12 col-md-4">
					<h3 class="section-title">Change Password</h3>
					<div class="section-intro">Change your current password to a new password and confirm your new password from this section </div>
				</div>
				<div class="col-12 col-md-8">
					<div class="app-card app-card-settings shadow-sm p-4">
						<div class="app-card-body">
							<form class="settings-form" action="/account/profile" method="post">
								<div class="mb-3">
									<label for="setting-input-2" class="form-label">Old Password</label>
									<input type="password" class="form-control" id="setting-input-3" name="old_password" placeholder="Enter Old Password" required>
								</div>
								<div class="mb-3">
									<label for="setting-input-3" class="form-label">New Password</label>
									<input type="password" class="form-control" id="setting-input-3" name="password" placeholder="New Password">
								</div>
								<div class="mb-3">
									<label for="setting-input-3" class="form-label">Confirm New Password</label>
									<input type="password" class="form-control" id="setting-input-3" name="confirm_password" placeholder="Confirm New Password">
								</div>
								<button type="submit" class="btn app-btn-primary">Update Password</button>
							</form>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

</div>


{{>footer}}