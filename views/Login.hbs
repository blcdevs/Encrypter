{{>indexHeader}}

<body class="app app-login p-0">    	
    <div class="row g-0 app-auth-wrapper">
	    <div class="col-12 col-md-7 col-lg-6 auth-main-col text-center p-5">
		    <div class="d-flex flex-column align-content-end">
			    <div class="app-auth-body mx-auto">	
				    <div class="app-auth-branding mb-4"><a class="app-logo" href="/"><img class="logo-icon me-2" src="images/app-logo.png" alt="logo"></a></div>
					<h2 class="auth-heading text-center mb-5">Log in to Encryptor</h2>
			        <div class="auth-form-container text-start">
						<form class="auth-form login-form" method="post" action="/account/auth/login">               
                    {{#if errors}} 
                        {{#each errors}}
                            <div class="alert alert-danger flashmsg" role="alert">{{this.msg}}</div>
                        {{/each}}
                    {{/if}}    
							<div class="email mb-3">
								<label class="" for="signin-email">Email</label>
								<input id="signin-email" name="username" type="text" class="form-control signin-email" placeholder="Enter your email" required="required">
							</div>
							<div class="password mb-3">
								<label class="" for="signin-password">Password</label>
								<input id="signin-password" name="password" type="password" class="form-control signin-password" placeholder="Enter your password" required="required">
							</div>
							<div class="text-center">
								<button type="submit" class="btn app-btn-primary w-100 theme-btn mx-auto">Log In</button>
							</div>
						</form>						
					</div>	
			    </div>

{{>indexFooter}}